							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"accept\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/swap-response/{{swapRequestId}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"swap-response",
								"{{swapRequestId}}"
							]
						},
						"description": "Reject a swap request - slots return to SWAPPABLE status"
					},
					"response": []
				}
