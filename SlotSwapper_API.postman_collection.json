		{
			"name": "Swaps",
			"item": [
				{
					"name": "Get Swappable Slots",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.slots.length > 0) {",
									"        pm.environment.set(\"theirSlotId\", response.slots[0].id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/swappable-slots",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"swappable-slots"
							]
						},
						"description": "Browse marketplace - get all swappable slots from other users"
					},
					"response": []
				},
				{
					"name": "Create Swap Request",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set(\"swapRequestId\", response.swapRequest.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"mySlotId\": 1,\n  \"theirSlotId\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/swap-request",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"swap-request"
							]
						},
						"description": "Request to swap your slot with someone else's slot"
					},
					"response": []
				},
				{
					"name": "Get My Swap Requests",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/my-requests",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"my-requests"
							]
						},
						"description": "Get all incoming and outgoing swap requests"
					},
					"response": []
				},
				{
					"name": "Accept Swap Request",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"accept\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/swap-response/{{swapRequestId}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"swap-response",
								"{{swapRequestId}}"
							]
						},
						"description": "Accept a swap request - calendars will be updated automatically"
					},
					"response": []
				},
				{
					"name": "Reject Swap Request",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
